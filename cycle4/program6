<body>
<center>
    <h1 style="color:black; text-align:center;"><u>Background Color changer</u></h1>
    <form>
 
        <button type="button" onclick="changecolor()" id="colorButton">changeColor</button>
    </form>

    <p id="result"></p>
    </center>

    <script>
        function changecolor() 
        {
            document.body.style.backgroundColor="#00ccff";
            colorButton.style.backgroundColor="blue";
            colorButton.style.color="white";
         }
    </script>
    
</body>
